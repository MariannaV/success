include ../components/head/head
include ../components/forms/input/index
include ../components/forms/select/index

mixin block(data)
    p(class=data.b) #{data.a}
    p.bdsdf

mixin button(data)
    button(class=data.class type=data.type) #{data.text}
mixin mini-block(data)
    .information-item
        h3(class=data.class) #{data.title}
        p #{data.description}

mixin portal(data)
    div(class=data.class)
        h3 В2В портал
        p Мы ведём работу исключительно с юридическими лицами. Чтобы оформить заказ, пожалуйста, введите необходимые данные.
        a(href="#" data-text='Смотреть видео о возможностях портала').block-with-video Смотреть видео о возможностях портала

mixin footer()
    footer © Группа компаний Саксэс, 2019


doctype html
html(lang="ru")
    head
        +head({
            "title": "Главная",
            "description": "Главная страница"
        })
        link(rel="stylesheet" href="styles/login-page.css")
    body.login-page
        header
            a.header-logo(href="#")
        main
            section.section-with-information
                .block-with-form
                    input#toggle-form(type="checkbox" style="display:none")
                    form.login-form(novalidate)
                        h3 Вход
                        +input({ name: 'login', placeholder: "Логин" })
                        +input({
                            name: 'password',
                            "placeholder": "Пароль",
                            type: "password",
                            classes: {container: 'input-password'},
                            children: {wrapper: "button onclick=showPassword(this) type=button"}
                        })
                        +button({"class": "orange-button", "type": "submit", "text": "Войти"})
                        p Ещё нет корпоративного аккаунта?
                    form.registration-form
                        h3 Заявка на регистрацию
                        +input({type: "text", placeholder: "ФИО", required: true} )
                        +input({placeholder: "Телефон", required: true})
                        +input({type: "email", placeholder: "email", required: true})
                        +input({type: "name", placeholder: "Компания", required: true})
                        +input({placeholder: "ИНН", required: true})
                        +select({
                            placeholder: "Город",
                            required: true,
                            options: [
                                {value: 1, label: 'Нижний Новгород'},
                                {value: 2, label: 'Казань'},
                                {value: 3, label: 'Набережные Челны'}
                            ]
                        })
                        +button({"class": "orange-button", "type": "submit", "text": "Отправить заявку"})
                        p Есть корпоративный аккаунт?
                    label(for="toggle-form")
                        span.span-send Отправить заявку
                        span.span-login Войти
                +portal({class: "about-portal"})
                +mini-block({
                    class: "item-title--first",
                    "title": "Сервис 24/7",
                    "description": "Мы одни из немногих компаний в регионе, имеющих собственную сервисную службу"
                })
                +mini-block({
                    class: "item-title--second",
                    "title": "Отгрузка 24/7",
                    "description": "Мы одни из немногих компаний в регионе, имеющих собственную сервисную службу"
                })
        +footer
        script(src="js/components/login-page/login-page.js" async)